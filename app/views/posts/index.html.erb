<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-12 p-lg-5 mx-auto my-5">
    <h1 class="display-4 font-weight-normal">Welcome to Quartz Forum</h1>
    <p class="lead font-weight-normal">Contola Sasingatura Saprawala</p>
      <a class="btn btn-outline-secondary" <%= link_to "More", about_path %></a>
  </div>
  <div class="product-device shadow-sm d-none d-md-block"></div>
  <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>
<br><br>
<% if user_signed_in? %>
<div class="row mb-2">
  <% @posts.each do |post| %>
     <div class="col-md-6">
       <div class="card flex-md-row mb-4 shadow-sm h-md-250">
         <div class="card-body d-flex flex-column align-items-start">
           <h3 class="mb-0">
             <a class="text-dark" href="#"><%= post.title%></a>
           </h3>
           <div class="mb-1 text-muted"><%= post.date %></div>
           <p class="card-text mb-auto"><%= post.body %></p>
           <%= link_to "Read More", post_path(post) %>
         </div>
         <%= image_tag post.img, class: 'image-post' %>
       </div>
   </div>
   <% end %>
 </div>
 <% end %>