<div class="jumbotron">
  <div class="container">
    <h3 class="display-4"><%= @post.title %></h3>
    <p class="lead">

      <p><%= @post.body %></p>
    <hr>
      <%=  link_to "Edit", edit_post_path(@post), :class => 'btn
            btn-default' %>
      <%=  link_to "Delete", post_path(@post),
                            method: :delete,
                            data: {confirm: 'Are you sure?'},
                            :class => 'btn btn-default' %>
    </p>
  </div>
  </div>
</div>
</main><!-- /.container -->
